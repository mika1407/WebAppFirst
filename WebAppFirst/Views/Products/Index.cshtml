@model IEnumerable<WebAppFirst.Models.Products>
@{
    ViewBag.Title = "Index";
}

@section scripts {
    <script type="text/javascript">
        $(function () {
            $(".showProductId").click(function () {
                var productId = $(this).data("productid");
                alert(productId)
            });
        });

        $(function () {
            $("#poistaTuote").click(function () {
                var productId = $(this).data("productid");
                alert(productId)
            });
        });

    </script>
    }

<h2>Products</h2>

<h5>Tuotteita @Model.Count() kappaletta</h5>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Tuote ID</th>
            <th>Tuotteen nimi</th>
            <th>A-Hinta</th>
            <th>Varastomäärä</th>
            <th>Tilatty määrä</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WebAppFirst.Models.Products prod in Model)
            {
        <tr>
            <td class="showProductId" data-ProductID="@prod.ProductID">@prod.ProductID</td>
            <td>@prod.ProductName</td>
            <td>@prod.UnitPrice</td>
            <td>@prod.UnitsInStock</td>
            <td>@prod.UnitsOnOrder</td>
            <td><button class="btn btn-success" onclick='naytaValittuTuote("@prod.ProductName")'>Muokkaa</button></td>

            <td><button class="btn btn-primary showProductId" data-ProductID="@prod.ProductID">Muokkaa</button></td>

            <td><button class="btn btn-danger " data-ProductID="@prod.ProductID" id="poistaTuote">Poista</button></td>
        </tr>
            }
    </tbody>
</table>

<script>
    function naytaValittuTuote(tuoteID) {
        alert(tuoteID)
    }
</script>

