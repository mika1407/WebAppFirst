@model WebAppFirst.Models.Shippers

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Shippers</h4>
    <hr />
    @*Button to Open the Modal*@
    <p>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
            Avaa modal
        </button>
    </p>
    @*The Modal*@
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title">Shippers Details</h1>
                </div>
                <div class="modal-body">
                    @*Modal body..*@
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.CompanyName)</dt>
                        <dd>@Html.DisplayFor(model => model.CompanyName)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd>@Html.DisplayFor(model => model.Phone)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Region.RegionDescription)</dt>
                        <dd>@Html.DisplayFor(model => model.Region.RegionDescription)</dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-warning" href="~/Shippers/Index/">Back to List</a>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Peruuta</button>
                </div>

            </div>
        </div>
    </div>

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CompanyName)</dt>
        <dd>@Html.DisplayFor(model => model.CompanyName)</dd>
        <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
        <dd>@Html.DisplayFor(model => model.Phone)</dd>
        <dt>@Html.DisplayNameFor(model => model.Region.RegionDescription)</dt>
        <dd>@Html.DisplayFor(model => model.Region.RegionDescription)</dd>
    </dl>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.ShipperID }) |
    @Html.ActionLink("Back to List", "Index")*@

    <a class="btn btn-primary" href="~/Shippers/Edit/@Model.ShipperID">Edit</a> |
    <a class="btn btn-warning" href="~/Shippers/Index/">Back to List</a>
</p>
